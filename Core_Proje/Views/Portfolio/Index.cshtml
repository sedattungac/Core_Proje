@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sira = 1;
}


<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div>
                <div class="card-header bg-transparent border-0 float-left">
                    <h3 class="text-white mb-0">Projelerim</h3>
                </div>
                <div class="card-header bg-transparent border-0 float-right">
                    <a href="/Portfolio/AddPortfolio" class="btn btn-warning btn-sm mb-0"> + Proje Ekle</a>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Proje Adı</th>
                            <th scope="col" class="sort" data-sort="status">Proje Url</th>
                            <th scope="col">Küçük Resim</th>
                            <th scope="col">Büyük Resim</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th scope="row">@sira </th>
                            <td class="budget">@item.Name</td>
                            <td class="budget">@item.ProjectUrl</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-toggle="popover-hover" data-img="@item.ImageUrl"> Küçük Resim </a>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-toggle="popover-hover" data-img="@item.ImageUrl2"> Büyük Resim </a>
                            </td>
                            <td>
                                <div class="avatar-group">
                                    <a class="btn btn-danger btn-sm text-white" href="/Portfolio/DeletePortfolio/@item.Id" id="DeleteBtn"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="ni ni-fat-remove"></i> Sil</a>

                                </div>
                            </td>
                            <td>
                                <div class="avatar-group">
                                    <a href="/Portfolio/EditPortfolio/@item.Id" class="btn btn-warning btn-sm text-white"><i class="ni ni-settings-gear-65"></i> Düzenle </a>
                                </div>
                            </td>
                        </tr>
                            sira++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>