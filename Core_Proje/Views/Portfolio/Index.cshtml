@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sira = 1;
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <h4 class="card-title float-left">Projelerim</h4>
                <a href="/Portfolio/AddPortfolio/" class="btn btn-outline-info float-right">+ Proje Ekle</a>

            </div>

            <div class="table-responsive mt-2">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Proje Adı</th>
                            <th scope="col" class="sort" data-sort="status">Proje Url</th>
                            <th scope="col">Küçük Resim</th>
                            <th scope="col">Büyük Resim</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-dark">
                                <th scope="row">@sira </th>
                                <td class="budget">@item.Name</td>
                                <td class="budget">@item.ProjectUrl</td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" data-toggle="popover-hover" data-img="@item.ImageUrl"> Küçük Resim </a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" data-toggle="popover-hover" data-img="@item.ImageUrl2"> Büyük Resim </a>
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <a class="btn btn-outline-danger btn-sm" href="/Portfolio/DeletePortfolio/@item.Id" id="DeleteBtn"
                                           onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>

                                    </div>
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <a href="/Portfolio/EditPortfolio/@item.Id" class="btn btn-outline-warning btn-sm ">Düzenle</a>
                                    </div>
                                </td>
                            </tr>
                            sira++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>