@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sira = 1;
}
<div class="col-lg-12 stretch-card">
    <div class="card">

        <div class="card-body">
            <div>
                <h4 class="card-title float-left">Deneyim Listesi</h4>
                <a href="/Experience/AddExperience" class="btn btn-outline-info float-right">+ Deneyim Ekle</a>
            </div>

            <div class="table-responsive mt-2">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="completion">Resim</th>
                            <th scope="col" class="sort" data-sort="budget">Şirket</th>
                            <th scope="col" class="sort" data-sort="budget">Ünvan</th>
                            <th class="col-2" scope="col" data-sort="completion">Tarih</th>
                            <th scope="col" class="sort" data-sort="completion">Açıklama</th>
                            <th scope="col" class="sort" data-sort="status">Sil</th>
                            <th scope="col" class="sort" data-sort="status">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="dark">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@sira</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    <a href="@item.ImageUrl" target="_blank"><img src="@item.ImageUrl" /></a>
                                </td>
                                <td class="budget">
                                    @item.Name
                                </td>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td class="budget col-2">
                                    @item.Date
                                </td>
                                <td>

                                    <a class="btn btn-outline-primary btn-sm " data-toggle="description" data-title="@item.Description">Açıklama </a>
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <a class="btn btn-outline-danger btn-sm " href="/Experience/DeleteExperience/@item.Id" id="DeleteBtn"
                                           onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>

                                    </div>
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <a href="/Experience/EditExperience/@item.Id" class="btn btn-outline-warning btn-sm ">Düzenle </a>
                                    </div>
                                </td>
                            </tr>
                            sira++;
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

