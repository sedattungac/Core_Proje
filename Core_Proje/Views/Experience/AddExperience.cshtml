@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>
<hr />
<div class="row">
    <div class="container-fluid col-12">
        <form asp-action="AddExperience">
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Şirket</label>
                <input asp-for="Name" class="form-control text-white" />
                <span asp-validation-for="Name" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Ünvan</label>
                <input asp-for="Title" class="form-control  text-white" />
                <span asp-validation-for="Title" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Tarih</label>
                <input asp-for="Date" class="form-control  text-white" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Şirket Logo</label>
                <input asp-for="ImageUrl" class="form-control  text-white" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"> Açıklama</label>
                <textarea asp-for="Description" rows="5" class="form-control  text-white" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group float-left">
                <a class="btn btn-outline-danger btn-sm" asp-action="Index">Listeye Geri Gön</a>
            </div>
            <div class="form-group float-right">
                <input type="submit" value="Kaydet" class="btn btn-outline-success btn-sm" />
            </div>
        </form>
    </div>
</div>


