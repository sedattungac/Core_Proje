@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AnnouncementDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Duyuru Detayları</h1>
<br />
<form class="form-group">
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control bg-white", @readonly = true })
    <br />
    @Html.Label("Durum")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control bg-white", @readonly = true })
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.Content, 10, 3, new { @class = "form-control bg-white", @readonly = true })
</form>


